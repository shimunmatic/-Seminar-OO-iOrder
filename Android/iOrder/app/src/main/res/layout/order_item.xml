<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:batman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="@dimen/smallest_margin"
    android:layout_marginTop="@dimen/smallest_margin"
    android:layout_marginEnd="@dimen/smallest_margin"
    android:layout_marginBottom="@dimen/smallest_margin"
    batman:cardBackgroundColor="@color/gray_background"
    batman:cardElevation="5dp"
    batman:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/order_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:textColor="@android:color/black"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="Establishment"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.233"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="Price"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="21.12.2017. 19:35"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_establishment"
                android:layout_width="0dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Garden"
                />

            <TextView
                android:id="@+id/order_bill"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="32.00 HRK"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="Click to see full details"/>

    </LinearLayout>




</android.support.v7.widget.CardView>
